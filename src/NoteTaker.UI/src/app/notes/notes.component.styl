$note-action-height = 40px;
$header = 64px;

.note-actions{
  height: note-action-height;
  font-size: 16px;
  vertical-align: middle; 
  padding-left: 20px;
}

.selected{
  background-color:aliceblue; 
}

.mat-list-base{
  padding-top:0px;
}

.mat-list-item{
  height: 100px; 
  cursor: pointer;
}

mat-list-item:hover {
  background-color:aliceblue; 
}

cdk-virtual-scroll-viewport{
  height: calc(100vh - 64px - 40px); /* 64 is header height */
}

::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  box-shadow: inset 0 0 2px #3f51b5; 
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  background: #3f51b5; 
  border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
  background: #3f51b5; 
}